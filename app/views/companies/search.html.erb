<% if !@is_search %>
<h1>Search companies</h1>

<%= form_tag('/companies/search', :method => 'get') do %>
  <div class="field">
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :city %><br />
    <%= text_field_tag :city %>
  </div>
  <div class="field">
    <%= label_tag :state %><br />
    <%= text_field_tag :state %>
  </div>
  <div class="field">
    <%= label_tag :country %><br />
    <%= text_field_tag :country %>
  </div>
  <div class="actions">
    <%= submit_tag 'Search' %>
  </div>
<% end %>

<% else %>

<% if @companies %>
<h1>Search results</h1>

<ul>
    <% @companies.each do |company| %>
      <li><%= link_to company.name, company_path(company) %></li>
    <% end %>
</ul>
<% else %>
No companies found.
<% end %>

<% end %>

<%= link_to 'Back', companies_path %>
